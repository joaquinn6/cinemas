@model IEnumerable<cinemas.Models.Entities.Pelicula>

@{
    ViewBag.Title = "Proximamente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6">
            <div class="thumbnail">
                <a href="~/cartelera/Formulario">

                    <div class="row col-md-12">
                        <div class="col-md-2">
                        </div>
                        <img src="~/img/@Html.DisplayFor(modelItem => item.Poster)" class="img-responsive img-rounded poster col-md-8" alt="Responsive image">
                        <div class="col-md-2">
                        </div>
                    </div>
                </a>
                <div class="caption">
                    <h3 class="text-center">@Html.DisplayFor(modelItem => item.Nombre)</h3>
                    <p>@Html.DisplayFor(modelItem => item.Sinopsis)</p>
                    <p><a href="#" class="btn btn-primary" role="button">Ver Reparto</a> <a href="#" class="btn btn-default" role="button">Ver Trailer</a></p>
                </div>
            </div>
        </div>
    }
</div>
