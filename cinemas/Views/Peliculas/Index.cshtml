 @model IEnumerable<cinemas.Models.Entities.Pelicula>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
@{ var i = "yvideo1"; var j = "close1";}
@foreach (var item in Model)
{
    <div class="col-md-6">
        <div class="thumbnail">
            <a href="~/Peliculas/Formulario/@Html.DisplayFor(modelItem => item.Nombre)"  formmethod="POST" class="center-block boton" >               
                <div class="row col-md-12 center-block">
                    <img src="~/img/@Html.DisplayFor(modelItem => item.Poster)" class="img-responsive img-rounded poster center-block" alt="Responsive image">
                </div>
            </a>

            <div class="caption">
                <h3 class="text-center">@Html.DisplayFor(modelItem => item.Nombre)</h3>
                <p>@Html.DisplayFor(modelItem => item.Sinopsis)</p>
                <p>
                    <a  class="btn btn-primary" role="button">Ver Reparto</a> 
                    @{var corto = Html.DisplayFor(modelItem => item.Nombre).ToString();}
                    @{corto = corto.Substring(0, 4);}
                    <a  class="btn btn-default" href="#" data-toggle="modal" data-target="#@corto">Ver Trailer</a>
                </p>
            </div>
        </div>
    </div>

    <!--MODAL-->
    <div class="modal fade" id="@corto" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" >
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" id="@j" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Trailer @Html.DisplayFor(modelItem => item.Nombre)</h4>
                </div>
                <div class="modal-body">
                    <div class="embed-responsive embed-responsive-16by9">
                        @Html.DisplayFor(modelItem => item.Trailer)
                        <iframe width="816" id="@i" height="459" src="@Html.DisplayFor(modelItem => item.Trailer)" frameborder="0" gesture="media" allow="encrypted-media" allowfullscreen></iframe>
                    </div>
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>
    {i ="yvideo2"; j = "close2"; }
}
</div>


