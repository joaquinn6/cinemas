@model IEnumerable<cinemas.Models.Entities.Registro>

@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-6">
    <table class="table">
        <tr>
            <th>Nombre</th>
            <th>Pelicula</th>
            <th>Fecha</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.recibos.cliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.peliculas.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.recibos.fechaPelicula)
                </td>
                <td>
                    <a id="/Peliculas/Detalles/@Html.DisplayFor(modelItem => item.recibos.ReciboId)" class="loadAjaxDetalles" role="button">Detalles</a>
                </td>
            </tr>
        }

    </table>
</div>
<div class="col-md-6" id="ajaxDe">

</div>
